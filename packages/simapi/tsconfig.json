{
  "compilerOptions": {
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": false,
    "noImplicitAny": false,

    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "resolveJsonModule": true,

    "outDir": "./dist",
    "rootDir": "./src",
    "sourceMap": true,

    "target": "ES2022",
    "lib": ["ES2022"],

    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },

    "noEmit": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
