  "version": "0.2.0",
  "configurations": [
    {
      "name": "C++: Launch Node (gdb)",
      "type": "cppdbg",
      "request": "launch",
      "program": "/home/bruno/.nvm/versions/node/v22.16.0/bin/node",
      "args": ["${workspaceFolder}/index.js"],
      "cwd": "${workspaceFolder}",
      "MIMode": "gdb",
      "stopAtEntry": false,
      "externalConsole": false,
      "setupCommands": [
        { "text": "-enable-pretty-printing", "ignoreFailures": true },
        { "text": "handle SIGSEGV stop print nopass", "ignoreFailures": true }
      ]
    }
  ]
